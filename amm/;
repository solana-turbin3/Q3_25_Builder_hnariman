use anchor_lang::prelude::*;

#[account]
#[derive(InitSpace)]
pub struct Config {
    pub seed: u64,
    pub authority: Option<Pubkey>,

    pub mint_x: Pubkey, // token to sell
    pub mint_y: Pubkey, // token to buy

    // u16 max val is 65k, shall be good enough for use case
    pub fee: u16,

    pub config_bump: u8, // 0-255 on-curve check
    pub lp_bump: u8,     // 0-255 on-curve check
e
